@model  InventoryManagement.ViewModels.EditProductViewModel

@{
   
}
@if (ViewData["Message"] != null)
{
    <h4 class="alert alert-danger">@ViewData["Message"]</h4>
}
<h2>Edit Product</h2>
<form enctype="multipart/form-data" asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.Id" method="Post">

    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp- asp-for="@Model.Name" placeholder="Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Details" class="col-sm-2 col-form-label">Details</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.Details" placeholder="Details" />
            <span asp-validation-for="@Model.Details" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Quantity" class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.Quantity" placeholder="Quantity" />
            <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Price" class="col-sm-2 col-form-label"> Price</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="@Model.Price" type="number" />
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-success">Save Changes</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger">Cancel</a>
    <a asp-controller="Product" asp-action="ViewProducts" class="btn btn-outline-Secondary">View All Products</a>
</form>

